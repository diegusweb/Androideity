<?xml version="1.0" encoding="utf-8"?>
<!-- Este es el archivo de layout que se manda a llamar en la actividad principal -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    ><!-- Contenedor raiz del documento -->
<TextView  
	android:id="@+id/label"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:text=""
    /><!-- Las etiquetas de texto en Android se llaman TextView -->
    <EditText
    	android:id="@+id/txt_nombre"
    	android:layout_height="wrap_content"
    	android:layout_width="fill_parent"
    	android:hint="Escribe tu nombre"
    	android:textSize="20dp" /><!-- Los cuadros de texto en Android se llaman EditText -->
    <EditText
    	android:id="@+id/txt_edad"
    	android:layout_height="wrap_content"
    	android:layout_width="fill_parent"
    	android:hint="Escribe tu edad"
    	android:textSize="20dp"
    	android:numeric="integer" />
    <Button
    	android:id="@+id/btn_enviar"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:gravity="center"
    	android:text="PresiÃ³name!" /><!-- Este es un boton dentro de la definicion de la GUI -->
		<!-- Cada uno de los elementos de la GUI en Android se llaman WIDGETS -->    	
    	
</LinearLayout>
